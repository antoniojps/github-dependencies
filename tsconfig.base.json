{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom", "ES2020.Promise"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@github-graphs/components": ["libs/components/src/index.ts"],
      "@github-graphs/components*": ["libs/components/src/lib/components*"],
      "@github-graphs/components/containers*": ["libs/components/src/lib/containers*"],
      "@github-graphs/parser-dependencies": ["libs/parser-dependencies/src/lib/index.ts"],
      "@github-graphs/parser-dependencies*": ["libs/parser-dependencies/src/lib*"],
      "@github-graphs/types": ["libs/types/src/index.ts"],
      "@github-graphs/services*": ["libs/services/src*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
